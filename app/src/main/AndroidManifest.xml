<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.radhikakhewalkarr.pingme">
    <!-- provididng oermission fpor app to use internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PINGme">
        <activity android:name="com.radhikakhewalkarr.pingme.WelcomeScreen"></activity>
        <activity android:name="com.radhikakhewalkarr.pingme.SignUpActivity" />
        <activity android:name="com.radhikakhewalkarr.pingme.LoginScreen" />
        <activity android:name="com.radhikakhewalkarr.pingme.PersonChat" />
        <activity android:name="com.radhikakhewalkarr.pingme.ChatList" />

        <activity android:name="com.radhikakhewalkarr.pingme.FlashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />





    </application>

</manifest>